@model BugOutBagCAPSTONE.Models.SupplierViewModel

@{
    ViewBag.Title = "UpdateSupplier";
    Layout = "~/Views/Shared/SupplierLayout.cshtml";
}

<h2>Update Vendor</h2>
@using (Html.BeginForm("UpdateSupplier", "Supplier", FormMethod.Post))
{
    <table>
        <tr>
            <td>Which Vendor?</td>
            <td>Correct Vendor name</td>
            <td>Correct Phone Number</td>
            <td>Correct Role</td>
        </tr>
        <tr>
            <td>@Html.DropDownListFor(x => x.SingleSupplier.PKSupplierID, Model.SupplierSelectList)</td>
            <td>@Html.TextBoxFor(x => x.SingleSupplier.VendorID)</td>
            <td>@Html.TextBoxFor(x => x.SingleSupplier.PHONENUM)</td>
            <td>@Html.DropDownListFor(x => x.SingleSupplier.UserRole.PKRoleID, Model.UserRoleSelectList) </td>
        </tr>

        <tr><td><input type="submit" /></td></tr>
    </table>
}
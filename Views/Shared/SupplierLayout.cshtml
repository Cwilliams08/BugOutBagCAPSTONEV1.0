<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <table>
        <tr>@if (Session["Role"] != null && Session["Role"] == "2")
            {
            <td>@Html.ActionLink("Update your Vendor name and Phone Number", "UpdateSupplier", "Supplier")</td>
            <td>@Html.ActionLink("Add items to Inventory", "AddItem", "Items")</td>
            <td>@Html.ActionLink("Update items in Inventory", "UpdateItems", "Items")</td>
            <td>@Html.ActionLink("Delete items from Inventory", "DeleteItem", "Items")</td>
            <td>@Html.ActionLink("View your current inventory", "InventoryIndex", "Items") </td>
            <td>@Html.ActionLink("Home", "SupplierIndex", "Supplier") </td>
            }
            @if (Session["Role"] != null && (int)Session["Role"] != 2)
            {
                <td>@Html.ActionLink("Add User", "AddUser", "BobOwner")</td>
            }
            @if (Session["Role"] != null && (int)Session["Role"] != 2)
            {
                <td>@Html.ActionLink("Delete User", "DeleteUser", "BobOwner")</td>
            }
            @if (Session["Role"] != null && (int)Session["Role"] != 2)
            {
                <td>@Html.ActionLink("Update User", "UpdateUser", "BobOwner")</td>
            }
            @if (Session["Role"] != null && (int)Session["Role"] != 2)
            {
                <td>@Html.ActionLink("Add Supplier", "AddSupplier", "Supplier")</td>
            }
            @if (Session["Role"] != null && (int)Session["Role"] != 2)
            {
                <td>@Html.ActionLink("Delete Supplier", "DeleteSupplier", "Supplier")</td>
            }
            @if (Session["Role"] != null && (int)Session["Role"] != 2)
            {
                <td>@Html.ActionLink("Update Supplier", "UpdateSupplier", "Supplier")</td>
            }
        </tr>
    </table>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
